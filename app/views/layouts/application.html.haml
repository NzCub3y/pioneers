!!! Strict
%html{html_attrs}
  %head
    %title Settlers of Satan
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'smoothness/jquery-ui-1.7.1.custom.css', :media => 'screen, projection'
    // jquery
    = javascript_include_tag "lib/jquery-1.3.2.js", :cache => true
    // jquery ui
    = javascript_include_tag "lib/jquery-ui-1.7.1.custom.js", :cache => true
    // jquery ui plugins
    = javascript_include_tag "lib/ui.accordion.js", "lib/effects.drop.js", "lib/effects.bounce.js", "lib/ui.sortable.js", "lib/effects.pulsate.js", "lib/effects.transfer.js", "lib/effects.scale.js", "lib/ui.draggable.js", "lib/ui.dialog.js", "lib/ui.selectable.js", "lib/effects.core.js", "lib/effects.explode.js", "lib/ui.core.js", "lib/effects.highlight.js", "lib/ui.slider.js", "lib/ui.tabs.js", "lib/effects.blind.js", "lib/ui.datepicker.js", "lib/effects.clip.js", "lib/effects.slide.js", "lib/ui.droppable.js", "lib/ui.resizable.js", "lib/ui.progressbar.js", "lib/effects.fold.js", "lib/effects.shake.js", :cache => true
    // orbited
    = javascript_include_tag "lib/orbited", :cache => true
    // stomp
    = javascript_include_tag "lib/stomp", :cache => true
    // application
    = javascript_include_tag "application", :cache => true
    // game logic
    = javascript_include_tag "pioneers/board", "pioneers/hex", "pioneers/node", "pioneers/edge", :cache => true
    // other
    = javascript_include_tag "pioneers/utils", :cache => true
    // widgets
    = javascript_include_tag "widgets/board", "widgets/board_hex", "widgets/board_node", "widgets/board_edge", "widgets/game", "widgets/player", "widgets/userplayer", "widgets/build", "widgets/gameinfo", "widgets/resource", "widgets/discard", :cache => true
  %body
    #container
      #flash
        = flash[:success]
        = flash[:error]
        = flash[:notice]
      #page
        = yield
