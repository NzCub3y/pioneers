!!! Strict
%html{html_attrs}
  %head
    %title Settlers of Satan
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'smoothness/jquery-ui-1.7.1.custom.css', :media => 'screen, projection'
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = javascript_include_tag "jquery-1.3.2.js", "jquery-ui-1.7.1.custom.min.js", "application", "board", "hex", "game", "node", "edge", "player", "utils", "user_player", "ajax", "card"
  %body
    #container
      #flash
        = flash[:success]
        = flash[:error]
        = flash[:notice]
      #page
        = yield
